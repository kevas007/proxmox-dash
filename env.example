# Configuration générale
# ENV peut être "dev" ou "production"
# En dev: les seeders seront chargés avec des données de test (utilisateurs, apps, alertes)
# En production: la base de données reste vierge
ENV=dev
NODE_ENV=development

# Backend API Configuration
HOST=0.0.0.0
PORT=8080
DB_PATH=./data/app.db
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# SMTP Configuration (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=[CONFIGUREZ_VOTRE_MOT_DE_PASSE_SMTP]
SMTP_FROM="ProxmoxDash <noreply@yourdomain.com>"
SMTP_TLS=true

# Notification Settings
NOTIFY_ENABLE_EMAIL=true
NOTIFY_ENABLE_SSE=true
NOTIFY_RATE_PER_MIN=60

# Security
AUTH_TOKEN=[CONFIGUREZ_VOTRE_TOKEN_AUTH_SECRET]
JWT_SECRET=[CONFIGUREZ_VOTRE_JWT_SECRET]

# Proxmox API (Optional)
PROXMOX_URL=https://pve.example.com:8006
PROXMOX_TOKEN=[CONFIGUREZ_VOTRE_TOKEN_PROXMOX]
PROXMOX_NODE=pve

# Frontend Configuration
VITE_API_URL=http://localhost:8080
VITE_APP_NAME="ProxmoxDash"
VITE_APP_VERSION=1.0.0
