# Dockerfile pour le développement backend
FROM golang:1.23-alpine

# Installer les dépendances de développement
RUN apk add --no-cache \
    git \
    ca-certificates \
    tzdata \
    curl

# Installer Air pour le hot reload (version compatible avec Go 1.23)
RUN go install github.com/cosmtrek/air@v1.51.0

# Ajouter Go bin au PATH
ENV PATH="${PATH}:/root/go/bin"

# Set working directory
WORKDIR /app

# Copier les fichiers go mod
COPY go.mod go.sum ./

# Télécharger les dépendances
RUN go mod download

# Copier le code source (y compris .air.toml)
COPY . .

# Exposer le port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:8080/api/health || exit 1

# Démarrer avec Air pour le hot reload
# Air surveille les changements et redémarre automatiquement
CMD ["air", "-c", ".air.toml"]

